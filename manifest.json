{
    "manifest_version": 3,
    "name": "SNow Tool",
    "version": "1.2",
    "permissions": ["activeTab", "tabs", "notifications"],
    "background": {
      "service_worker": "service-worker.js"
    },
    "content_scripts": [
      {
        "matches": ["https://gaia.service-now.com/*"],
        "js": ["wakeLock.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://gaia.service-now.com/now/nav/ui/classic/params/target/interaction_list.do*"],
        "js": ["interactionFilter.js"],
        "all_frames": true,
        "run_at": "document_end"
      }
    ],
    "action": {
        "default_popup": "popup.html"
      },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
}